@model ABCPublication.Web.Models.WebPageViewModel

<div class="row">
    <div class="col-md-8">
        <h3 class="pb-4 mb-4 fst-italic border-bottom">
            @Model.Title
        </h3>

        <article>
            @if (Model.Content.Any())
            {
                <div class="row">
                    @foreach (var content in Model.Content)
                    {
                        <p>@content</p>
                    }

                </div>
            }
        </article>
    </div>

    <div class="col-md-4">
        <div class="position-sticky" style="top: 2rem;">

            <div class="p-4">
                <h4 class="fst-italic">@Html.DisplayNameFor(model => model.Navigation)</h4>
                <ol class="list-unstyled mb-0">
                    @foreach (var nav in Model.Navigation)
                    {
                        <li><a asp-controller="Section" asp-action="@nav.Section" class="text-decoration-underline">@nav.Text</a></li>
                    }
                </ol>
            </div>
        </div>
    </div>
</div>